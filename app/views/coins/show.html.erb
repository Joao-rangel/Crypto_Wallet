<div class="container-fluid">
  <p id="notice"><%= notice %></p>
  
  <ul class="list-group">
      <li class="list-group-item">
        <strong><%= @coin.class.human_attribute_name(:description) %>:</strong>
        <%= @coin.description %>
      </li>
      <li class="list-group-item">
        <strong><%= @coin.class.human_attribute_name(:acronym) %>:</strong>
        <%= @coin.acronym %>
      </li>
      <li class="list-group-item">
        <strong>Url image:</strong>
        <td><%= @coin.url_image.include?(".png") ? (image_tag @coin.url_image, size: "25x25") : @coin.url_image %></td>
      </li>
    </ul>
      
</br>
      <%= link_to t('links.edit'), edit_coin_path(@coin), class:"btn btn-outline-primary"   %> 
      <%= link_to t('links.back'), coins_path, class:"btn btn-outline-primary"   %>
</div>